{
	"name": "thepixeldeveloper/sitemap",
	"type": "library",
	"description": "XML sitemap generation",
	"keywords": ["sitemap", "xml"],
	"license": "MIT",
	"authors": [
		{
			"name": "Mathew Davies",
			"homepage": "http://mathew-davies.co.uk",
			"role": "Developer"
		}
	],
	"require": {
		"php": ">=5.6.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^6.4"
	},
	"autoload": {
		"psr-4": {
			"Thepixeldeveloper\\Sitemap\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\Thepixeldeveloper\\Sitemap\\": "tests/"
		}
	},
	"scripts": {
		"test": "phpunit",
		"coverage": "phpunit --coverage-text --colors=never --coverage-html ./coverage"
	}
}
